<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="1"
            android:id="@+id/tv_number"
            android:textSize="@dimen/size_text_22"
            android:padding="@dimen/size10"
            android:layout_margin="@dimen/size4"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Name"
                android:id="@+id/tv_name"
                android:paddingStart="@dimen/size8"
                android:paddingTop="@dimen/size8"
                android:paddingEnd="@dimen/size8"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="sdt"
                android:textSize="@dimen/size_text_14"
                android:id="@+id/tv_sdt"
                android:paddingStart="@dimen/size8"
                android:paddingBottom="@dimen/size6"
                android:paddingEnd="@dimen/size8"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>