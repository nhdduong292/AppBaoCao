<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size8"
android:paddingStart="@dimen/size8"
    android:paddingEnd="@dimen/size8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="@dimen/size40"
        android:paddingEnd="@dimen/size40"
        android:paddingTop="@dimen/size20"
        android:background="@color/colorGreenOriginal"
        android:id="@+id/ll_dm"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="@dimen/size80"
            android:layout_height="@dimen/size80"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size20"
            android:layout_marginBottom="@dimen/size10"
            android:text="@string/category"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_text_20" />
    </LinearLayout>
</LinearLayout>