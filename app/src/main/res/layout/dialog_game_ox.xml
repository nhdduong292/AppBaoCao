<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_dialog_game_ox"
        android:layout_height="0dp"
        android:padding="@dimen/size8"
        android:layout_margin="@dimen/size24"
        android:layout_weight="3">
        <TextView
            android:layout_width="match_parent"
            android:text="Bạn muốn chơi Game ?"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="@dimen/size_text_38"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/size50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/iv_list_game"
                android:src="@mipmap/ic_list_white_24dp"
                android:layout_height="@dimen/size34" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/iv_play"
                android:src="@mipmap/ic_play_arrow_white_24dp"
                android:layout_height="@dimen/size34" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/iv_restart"
                android:src="@mipmap/ic_replay_white_24dp"
                android:layout_height="@dimen/size34" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></LinearLayout>

</LinearLayout>