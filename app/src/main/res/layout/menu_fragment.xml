<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorGreenOriginal"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_trang_chu"
            android:padding="@dimen/size8"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/size40"
                android:src="@mipmap/ic_home_white_24dp"
                android:layout_height="@dimen/size40" />
            <TextView
                android:layout_width="match_parent"
                android:text="Trang chá»§"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_note"
            android:padding="@dimen/size8"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/size40"
                android:src="@mipmap/ic_create_white_24dp"
                android:layout_height="@dimen/size40" />
            <TextView
                android:layout_width="match_parent"
                android:text="Note"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_game"
            android:padding="@dimen/size8"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/size40"
                android:src="@mipmap/ic_games_white_24dp"
                android:layout_height="@dimen/size40" />
            <TextView
                android:layout_width="match_parent"
                android:text="Game"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_music"
            android:padding="@dimen/size8"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/size40"
                android:src="@mipmap/ic_queue_music_white_24dp"
                android:layout_height="@dimen/size40" />
            <TextView
                android:layout_width="match_parent"
                android:text="Music"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_call_sms"
            android:padding="@dimen/size8"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/size40"
                android:src="@mipmap/ic_call_white_24dp"
                android:layout_height="@dimen/size40" />
            <TextView
                android:layout_width="match_parent"
                android:text="Call/Sms"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_log_out"
            android:padding="@dimen/size8"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/size40"
                android:src="@mipmap/ic_lock_outline_white_24dp"
                android:layout_height="@dimen/size40" />
            <TextView
                android:layout_width="match_parent"
                android:text="Log out"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@color/colorTransparent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/size40"
            android:src="@mipmap/ic_close"
            android:layout_margin="@dimen/size4"
            android:id="@+id/iv_close"
            android:layout_height="@dimen/size40" />
    </LinearLayout>

</LinearLayout>