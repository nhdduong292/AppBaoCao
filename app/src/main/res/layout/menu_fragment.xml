<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorGreenOriginal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size170"

            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/size70"
                android:layout_height="@dimen/size70"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/no_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size12"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size12"
                    android:text="Tên: xxxxxx"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_text_22"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_tuoi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuổi: 00"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_text_22"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_gioitinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính: xxx"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_22"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_trang_chu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size8">

            <ImageView
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:src="@mipmap/ic_home_white_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:text="Trang chủ"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size8">

            <ImageView
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:src="@mipmap/ic_create_white_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:text="Note"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size8">

            <ImageView
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:src="@mipmap/ic_games_white_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:text="Game"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size8">

            <ImageView
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:src="@mipmap/ic_queue_music_white_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:text="Music"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_call_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size8">

            <ImageView
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:src="@mipmap/ic_call_white_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:text="Call/Sms"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size8">

            <ImageView
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:padding="@dimen/size4"
                android:src="@mipmap/ic_economic_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:text="@string/profile"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size8">

            <ImageView
                android:layout_width="@dimen/size40"
                android:layout_height="@dimen/size40"
                android:src="@mipmap/ic_lock_outline_white_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size8"
                android:gravity="center_vertical"
                android:text="Log out"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_text_20" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorTransparent">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/size40"
            android:layout_height="@dimen/size40"
            android:layout_margin="@dimen/size4"
            android:src="@mipmap/ic_close" />
    </LinearLayout>

</LinearLayout>